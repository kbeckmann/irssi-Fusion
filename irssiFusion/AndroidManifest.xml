<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.platinummonkey.irssifusion"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<provider android:name=".irssiFusionProvider"
    			  android:authorities="com.platinummonkey.irssifusion" />
    			  
    	<service android:enabled="true"
    	         android:name=".irssiFusionService"
    	         android:process=":remote">
    	         <intent-filter>
    	         	<action android:name="com.platinummonkey.irssifusion.irssiFusionService" />
    	         </intent-filter>
    	</service>
        <activity android:name=".irssifusion"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>